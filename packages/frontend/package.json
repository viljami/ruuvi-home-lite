    "canvas": "^2.11.2",
    "happy-dom": "^12.10.3",
    "jsdom": "^23.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
