{
  "name": "@ruuvi-home/backend",
  "version": "1.0.0",
  "description": "Backend service for Ruuvi sensor data collection and API",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch & nodemon dist/server.js",
    "start": "node dist/server.js",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "migrate": "node dist/cli/migrate.js",
    "migrate:status": "node dist/cli/migrate.js status",
    "migrate:health": "node dist/cli/migrate.js health"
  },
  "dependencies": {
    "@ruuvi-home/shared": "file:../shared",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mqtt": "^5.3.4",
    "winston": "^3.11.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/sqlite3": "^3.1.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true
}
