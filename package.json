{
  "name": "ruuvi-home-lite",
  "version": "1.0.0",
  "description": "Minimal Ruuvi sensor data visualization",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsc && node dist/server.js",
    "pm2": "pm2 start ecosystem.config.js",
    "test": "tsc && node tests/test-decoder.js",
    "test:unit": "tsc && node tests/test-decoder.js",
    "test:integration": "tsc && node tests/test-mqtt.js",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.js\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "echo no-hooks",
    "clean": "rm -rf dist/",
    "migrate": "tsc && node dist/cli/migrate.js migrate",
    "migrate:status": "tsc && node dist/cli/migrate.js status",
    "migrate:rollback": "tsc && node dist/cli/migrate.js rollback",
    "migrate:health": "tsc && node dist/cli/migrate.js health"
  },
  "dependencies": {
    "mqtt": "^5.3.4",
    "sqlite3": "^5.1.6",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "prettier": "^3.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0"
  },
  "engines": {
    "node": ">=18"
  }
}
